<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="https://www.surfriend.com/img/user.png" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%=current_user.first_name%> <%=current_user.last_name%></h5>
    <p class="list-group-item"><%=current_user.email%> </p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="card-text"><%=current_user.description%> </li>
  </ul>
  <div class="card-body">
    <span class="btn btn-success"><%= link_to "Edit profil", edit_user_registration_path %></span> 
    <a href="/events" class="btn btn btn-primary">Back to home</a>
  </div>
</div>